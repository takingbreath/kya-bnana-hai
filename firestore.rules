rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read;
      // Temporarily allow all writes for troubleshooting
      allow write: if request.auth != null;
    }
    
    match /recipes/{recipeId} {
      allow read;
      allow write: if request.auth != null;
    }

    match /users/{userId} {
      allow read;
      // Temporarily allow any authenticated user to write for troubleshooting
      allow write: if request.auth != null;
    }
  }
} 